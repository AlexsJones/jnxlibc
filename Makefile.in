all: main_artifact shipping

main_artifact:
	gcc -Wall -fPIC -c src/*.c
	build.shared.object
shipping:
	rm *.o
	find . -type f -name "*~" -exec rm {} \;
	mkdir -p lib; 
	move.shared.object
	mkdir -p lib/jnxc_headers; cp src/*.h lib/jnxc_headers;
	
install:
	install.shared.object
	rm -rf lib
	echo "Installed successfully"
